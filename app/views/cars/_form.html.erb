			<%= f.input :title_status, :collection => ['Clean', 'Salvage', 'Rebuilt'], label: false, wrapper: false, :selected => ['Clean'], include_blank: false %>
			</div>
		</div>
	</div>
	<br>
	<div class="field">
		<div class="control">
			<%= f.label :condition, "Condition *", class: 'is-size-5'%>
