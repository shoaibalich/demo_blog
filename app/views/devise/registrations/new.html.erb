<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
       		Dealership Sign Up
      </h1>
      <h2 class="subtitle">
        Sign up today for a 14 day free trial. No CC needed.
      </h2>
    </div>
  </div>
</section>

<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-4">
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				  <%= f.error_notification %>

				  	<!-- First Name -->
					<div class="field">
						<div class="control">
							<%= f.input :first_name, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Last Name -->
					<div class="field">
						<div class="control">
							<%= f.input :last_name, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Phone -->
					<div class="field">
						<div class="control">
							<%= f.input :phone, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Email -->
					<div class="field">
						<div class="control">
							<%= f.input :email, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

	
					<!-- Password -->
					<div class="field">
						<div class="control">
							<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), wrapper: false, label_html: {class: "label"}, input_html: {class: "input"} %>
						</div>
					</div>


					<!-- Password Confirmation -->
					<div class="field">
						<div class="control">
							<%= f.input :password_confirmation, required: true, wrapper: false, label_html: {class: "label"}, input_html: {class: "input"} %>
						</div>
					</div>


					<!-- Dealership Name -->
					<div class="field">
						<div class="control">
							<%= f.input :dealership_name, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Dealership Street -->
					<div class="field">
						<div class="control">
							<%= f.input :dealership_street, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Dealership City -->
					<div class="field">
						<div class="control">
							<%= f.input :dealership_city, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Dealership State -->
					<div class="field">
						<div class="control">
							<%= f.input :dealership_state, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Dealership ZIP -->
					<div class="field">
						<div class="control">
							<%= f.input :dealership_zip, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Dealership Country -->
					<div class="field">
						<div class="control">
							<%= f.input :dealership_country, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
						</div>
					</div>

					<!-- Submit Button -->
					<div class="field">
						<div class="control">
							<%= f.button :submit, "Sign Up", class: "button is-info is-medium" %>
						</div>
					</div>
				 	
				<% end %>
			</div>
		</div>
	</div>
</section>

