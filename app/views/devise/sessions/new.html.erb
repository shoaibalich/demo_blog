<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Dealer Sign In
      </h1>
      <h2 class="subtitle">
        Enter your registered email and password to continue
      </h2>
    </div>
  </div>
</section>

<section class="section">
	<div class="container">
		<div class="columns">
			<div class="column"></div>
			<div class="column">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<%= f.error_notification %>
				<div class="field">
					<div class="control">
						<%= f.input :email, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
					</div>
				</div>
				<div class="field">
					<div class="control">
						<%= f.input :password, required:true, autofocus:false, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
					</div>
				</div>
				<div class="field">
					<div class="control">
						<%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
					</div>
				</div>
				<div class="field">
					<div class="control">
						<%= f.button :submit, "Sign In", class: "button is-primary is-medium" %>
					</div>
				</div>
				<% end %>
				<br>
				<%= render "devise/shared/links" %>
			</div>
			<div class="column"></div>
		</div>
	</div>
</section>
