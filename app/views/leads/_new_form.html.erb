<%= simple_form_for(@lead, url: dealer_car_leads_path(dealer_id, car_id)) do |f| %>
	<%= f.error_notification %>
	<div class="field">
		<div class="control">
			<%= f.input :name, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
		</div>
	</div>

	<div class="field">
		<div class="control">
			<%= f.input :phone, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
		</div>
	</div>

	<div class="field">
			<div class="control">
				<%= f.input :email, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
			</div>
		</div>

	<%= f.simple_fields_for :tasks do |p| %>
		<div class="field">
				<div class="control">
					<%= p.input :task_type, required:true, autofocus:true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
				</div>
			</div
	<% end %>
	
	<div class="field">
		<div class="control">
			<%= f.button :submit, class: "button is-primary" %>
		</div>
	</div>
	

<% end %>